    <div class="container mt-5">
        <h1 class="text-center mb-3">Transaksi</h1>
        <p><%= items %></p>
        <a href="/transaction" class="btn btn-primary rounded-pill me-3 mb-2">Works in Progress</a>
        <a href="/transaction/finished" class="btn btn-info rounded-pill mb-2">Works Finished</a>
        <a href="/transaction/add" class="btn btn-success rounded-pill mb-2" style="float:right;">New Order</a>
        <table class="table table-bordered">
            <thead>
            <tr class="table-info text-center">
                <th style="width: 5%;">Nomor</th>
                <th style="width: 20%;">Nama</th>
                <th style="width: 20%;">Jam, Tanggal Pesan</th>
                <th style="width: 25%;">Paket</th>
                <th style="width: 20%;">Aksi</th>
            </tr>
            </thead>
            <% items.forEach((item)=> { %>
            <tr>
                <td class="text-center">2</td>
                <td><%= item.name %></td>
                <td><%= item.waktuPesan + ", " + item.tglPesan %></td>
                <td><%= item.paket + ", " + item.durasi %></td>
                <td class="text-center">
                    <a href="transaksi_finish.html" class="btn btn-danger rounded-pill me-1">delete</button>
                    <a href="transaksi_finish.html" class="btn btn-warning rounded-pill me-1">edit</button>
                    <a href="transaksi_finish.html" class="btn btn-success rounded-pill me-1">done</button>
                    <a href="transaksi_finish.html" class="btn btn-info rounded-pill me-1">print</button>
                </td>
            </tr>
